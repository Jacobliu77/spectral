fs.writeFileSync(path.join(dir, 'package.json'), JSON.stringify({ main: './index.js' }));
fs.writeFileSync(path.join(dir, 'index.js'), 'module.exports = Function()');

try {
  require('foo'); // this will throw if foo cannot be resolved
} finally {
  fs.unlinkSync(path.join(dir, 'package.json'));
  fs.unlinkSync(path.join(dir, 'index.js'));
  fs.rmdirSync(dir);
}

